{
  "info": {
    "name": "Mailer Testing Collection",
    "description": "Collection for testing all mailer endpoints in NestJS application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Mailer Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3333/mailer/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3333",
          "path": ["mailer", "health"]
        },
        "description": "Check if mailer service is healthy and running"
      },
      "response": []
    },
    {
      "name": "Send Test Email",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:3333/mailer/test",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3333",
          "path": ["mailer", "test"]
        },
        "description": "Send a test email to verify mailer is working correctly"
      },
      "response": []
    },
    {
      "name": "Send Welcome Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"name\": \"John Doe\"\n}"
        },
        "url": {
          "raw": "http://localhost:3333/mailer/welcome",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3333",
          "path": ["mailer", "welcome"]
        },
        "description": "Send welcome email to new user with custom template"
      },
      "response": []
    },
    {
      "name": "Send Verification Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"name\": \"John Doe\",\n  \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3333/mailer/verification",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3333",
          "path": ["mailer", "verification"]
        },
        "description": "Send email verification with code and verification link"
      },
      "response": []
    },
    {
      "name": "Send Email with Template",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"subject\": \"Custom Notification\",\n  \"template\": \"welcome\",\n  \"templateData\": {\n    \"name\": \"Jane Smith\",\n    \"username\": \"janesmith\",\n    \"email\": \"test@example.com\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:3333/mailer/template",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3333",
          "path": ["mailer", "template"]
        },
        "description": "Send email with specific template and data"
      },
      "response": []
    },
    {
      "name": "Create Admin (Auto Welcome Email)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"TestPass123\",\n  \"phone\": \"+1234567890\",\n  \"country\": \"USA\"\n}"
        },
        "url": {
          "raw": "http://localhost:3333/admin/create",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3333",
          "path": ["admin", "create"]
        },
        "description": "Create new admin - this will automatically send a welcome email"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3333",
      "type": "string"
    },
    {
      "key": "testEmail",
      "value": "test@example.com",
      "type": "string"
    }
  ]
} 