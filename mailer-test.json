{
  "mailer": {
    "health_check": {
      "method": "GET",
      "endpoint": "/mailer/health",
      "description": "Check if mailer service is healthy"
    },
    "test_email": {
      "method": "POST",
      "endpoint": "/mailer/test",
      "description": "Send a test email to verify mailer is working",
      "body": {},
      "expected_response": {
        "success": true,
        "message": "Test email sent successfully",
        "timestamp": "2025-08-18T..."
      }
    },
    "welcome_email": {
      "method": "POST",
      "endpoint": "/mailer/welcome",
      "description": "Send welcome email to new user",
      "body": {
        "to": "test@example.com",
        "name": "John Doe",
        "username": "johndoe",
        "email": "test@example.com"
      },
      "expected_response": {
        "success": true,
        "message": "Welcome email sent successfully",
        "data": {
          "to": "test@example.com",
          "name": "John Doe",
          "username": "johndoe"
        },
        "timestamp": "2025-08-18T..."
      }
    },
    "verification_email": {
      "method": "POST",
      "endpoint": "/mailer/verification",
      "description": "Send email verification with code",
      "body": {
        "to": "test@example.com",
        "name": "John Doe",
        "email": "test@example.com",
        "verificationCode": "123456"
      },
      "expected_response": {
        "success": true,
        "message": "Verification email sent successfully",
        "data": {
          "to": "test@example.com",
          "name": "John Doe",
          "verificationCode": "123456"
        },
        "timestamp": "2025-08-18T..."
      }
    },
    "custom_email": {
      "method": "POST",
      "endpoint": "/mailer/custom",
      "description": "Send custom email with template and context",
      "body": {
        "to": "test@example.com",
        "subject": "Custom Notification",
        "template": "welcome",
        "context": {
          "name": "Jane Smith",
          "username": "janesmith",
          "email": "test@example.com",
          "customMessage": "This is a custom message"
        }
      },
      "expected_response": {
        "success": true,
        "message": "Custom email sent successfully",
        "data": {
          "to": "test@example.com",
          "subject": "Custom Notification",
          "template": "welcome"
        },
        "timestamp": "2025-08-18T..."
      }
    }
  },
  "admin_with_email": {
    "create_admin": {
      "method": "POST",
      "endpoint": "/admin/create",
      "description": "Create new admin (will automatically send welcome email)",
      "body": {
        "name": "Test User",
        "username": "testuser",
        "email": "test@example.com",
        "password": "TestPass123",
        "phone": "+1234567890",
        "address": "123 Test Street",
        "country": "USA",
        "dateOfBirth": "1990-01-01",
        "socialMediaLink": "https://github.com/testuser"
      },
      "expected_response": {
        "success": true,
        "message": "Admin created successfully",
        "data": {
          "id": 3,
          "name": "Test User",
          "username": "testuser",
          "email": "test@example.com",
          "isVerified": false
        }
      }
    }
  },
  "test_scenarios": {
    "scenario_1": {
      "name": "Basic Mailer Health Check",
      "steps": [
        "1. Start the application",
        "2. Call GET /mailer/health",
        "3. Verify service is healthy"
      ]
    },
    "scenario_2": {
      "name": "Test Email Sending",
      "steps": [
        "1. Call POST /mailer/test",
        "2. Check email is received",
        "3. Verify response success"
      ]
    },
    "scenario_3": {
      "name": "Welcome Email Flow",
      "steps": [
        "1. Create new admin via POST /admin/create",
        "2. Check welcome email is sent automatically",
        "3. Verify email content and styling"
      ]
    },
    "scenario_4": {
      "name": "Verification Email",
      "steps": [
        "1. Call POST /mailer/verification",
        "2. Check verification email is sent",
        "3. Verify code display and button"
      ]
    }
  },
  "curl_examples": {
    "health_check": "curl -X GET http://localhost:3333/mailer/health",
    "test_email": "curl -X POST http://localhost:3333/mailer/test",
    "welcome_email": "curl -X POST http://localhost:3333/mailer/welcome -H \"Content-Type: application/json\" -d '{\"to\":\"test@example.com\",\"name\":\"John Doe\",\"username\":\"johndoe\",\"email\":\"test@example.com\"}'",
    "verification_email": "curl -X POST http://localhost:3333/mailer/verification -H \"Content-Type: application/json\" -d '{\"to\":\"test@example.com\",\"name\":\"John Doe\",\"email\":\"test@example.com\",\"verificationCode\":\"123456\"}'",
    "create_admin": "curl -X POST http://localhost:3333/admin/create -H \"Content-Type: application/json\" -d '{\"name\":\"Test User\",\"username\":\"testuser\",\"email\":\"test@example.com\",\"password\":\"TestPass123\"}'"
  },
  "postman_collection": {
    "info": {
      "name": "Mailer Testing Collection",
      "description": "Collection for testing all mailer endpoints"
    },
    "item": [
      {
        "name": "Mailer Health Check",
        "request": {
          "method": "GET",
          "url": "http://localhost:3333/mailer/health"
        }
      },
      {
        "name": "Send Test Email",
        "request": {
          "method": "POST",
          "url": "http://localhost:3333/mailer/test"
        }
      },
      {
        "name": "Send Welcome Email",
        "request": {
          "method": "POST",
          "url": "http://localhost:3333/mailer/welcome",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"to\": \"test@example.com\",\n  \"name\": \"John Doe\",\n  \"username\": \"johndoe\",\n  \"email\": \"test@example.com\"\n}"
          }
        }
      },
      {
        "name": "Send Verification Email",
        "request": {
          "method": "POST",
          "url": "http://localhost:3333/mailer/verification",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"to\": \"test@example.com\",\n  \"name\": \"John Doe\",\n  \"email\": \"test@example.com\",\n  \"verificationCode\": \"123456\"\n}"
          }
        }
      },
      {
        "name": "Create Admin (Auto Welcome Email)",
        "request": {
          "method": "POST",
          "url": "http://localhost:3333/admin/create",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"name\": \"Test User\",\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"TestPass123\",\n  \"phone\": \"+1234567890\",\n  \"country\": \"USA\"\n}"
          }
        }
      }
    ]
  }
} 