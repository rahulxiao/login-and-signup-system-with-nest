            "url": {"raw": "http://localhost:3333/auth/login", "protocol": "http", "host": ["localhost"], "port": "3333", "path": ["auth","login"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin_user\",\n  \"password\": \"SecurePass123\"\n}"
            }
          }
        },
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
